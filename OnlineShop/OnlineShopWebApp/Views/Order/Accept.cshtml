            crossorigin="anonymous"></script>

    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

    <style>
        .offer-button:hover {
            color: white;
            background-color: #b75454;
        }

        .offer-button {
            font-weight: bold;
            text-align: center;
            background-color: #a52a2a;
            color: white;
            margin: 10px;
        }

        .book-price {
            display: flex;
            justify-content: space-between;
        }

        .quantity-box button,
        .quantity-box span {
            justify-content: center;
            align-items: center;
            height: 30px;
            width: 30px;
            background: none;
            font-weight: bold;
            text-align: center;
            border: solid .1rem lightgray;
        }

        .quantity-box span {
            border-top: solid .1rem lightgray;
            border-bottom: solid .1rem lightgray;
        }

        .quantity-box { display: inline-flex; }

        .book-price { font-weight: bold }

        .clear-cart {
            display: flex;
            justify-content: flex-end;
        }
    </style>
</head>

