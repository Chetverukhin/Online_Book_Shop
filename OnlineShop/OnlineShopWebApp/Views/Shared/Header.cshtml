<style>
    .nav-item {
        margin-left: 20px;
    }

    .search-button {
            font-weight: bold;
            text-align: center;
            background-color: #a52a2a;
            color: white;
    }
    .search-button:hover{
        color: white;
        background-color: #b75454;
    }
</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

        <div class="container">

            <a style="width:200px" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Book Shop</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        @await Component.InvokeAsync("Cart", @User.FindFirstValue(ClaimTypes.NameIdentifier))
                    </li>

                    @if(User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Enter" asp-action="Authorization">@User.Identity.Name</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Enter" asp-action="Authorization">Enter</a>
                        </li>
                    }
                    
                    @if (User.IsInRole(Constant.AdminRoleName))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Panel Manager</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>