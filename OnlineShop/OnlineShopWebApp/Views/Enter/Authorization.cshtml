@model Authorization

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Пример на bootstrap 5: Форма входа - макет и дизайн формы · Версия v5.0.2">

    <!-- Bootstrap core CSS -->
    <link href="/docs/5.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/docs/5.0/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="/docs/5.0/assets/img/favicons/manifest.json">
    <link rel="mask-icon" href="/docs/5.0/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#7952b3">


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        .user-enter {
            width: 20vw;
            padding: 20px;
            border: solid .1rem lightgray;
            border-radius: 5px;
        }

        .sign-link {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-evenly;
        }

        .sign-link a {
            text-decoration: none;
        }

        main.pb-3 {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        .checkbox input {
            margin: 10px 0;
        }

        .cart-button {
            font-weight: bold;
            background-color: #a52a2a;
            color: white;
        }

        .cart-button:hover {
            color: white;
            background-color: #b75454;
        }

        .form-floating {
            margin: 20px 0;
        }

        .sign-link a,
        .sign-link a:active {
            font-weight: bold;
            text-decoration: none;
            color: black;
        }

        .sign-link a:hover {
            text-decoration: none;
            color: #a52a2a;
        }

        .sign-link a:after {
            border-bottom: solid .5rem #a52a2a;
        }

        .error-message {
            color: #a52a2a;
            font-weight: bold;
            font-size: 14px;
            margin: 10px 0;
            padding: 0;
        }

        .validation ul {
            list-style-type: none;
            color: #a52a2a;
            font-weight: bold;
            font-size: 14px;
            margin: 10px 0;
            padding: 0;
        }
    </style>

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
</head>

<body class="text-center">

<section class="user-enter">
    <div class="sign-link">
        <a asp-controller="Enter" asp-action="Authorization" class="enter">Вход</a>
        <a asp-controller="Enter" asp-action="Registration" asp-route-returnUrl="@Model.ReturnUrl" class="registration">Регистрация</a>
    </div>

    <main class="form-signin">

        <form method="post">

            <div class="form-floating">
                <input class="form-control" placeholder="example@email.com " asp-for="Login">
                <span class="error-message" asp-validation-for="Login"></span>

            </div>

            <div class="form-floating">
                <input type="password" class="form-control" placeholder="Пароль" asp-for="Password">
                <span class="error-message" asp-validation-for="Password"></span>
            </div>

            <div class="checkbox mb-3">
                <input type="checkbox" value="true" name="RememberMe"> Запомнить меня
            </div>
            
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl">

            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <button asp-controller="Enter" asp-action="Authorization" type="submit" class="btn cart-button">ВХОД</button>

        </form>
    </main>
</section>

<script src="/docs/5.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>

</body>


