@model List<UserViewModel>
<style>
    .container {
        margin: 0 5%;
        padding: 0;
    }

    .manager-container {
        display: flex;
        height: 100vh;
    }

    .manager-navbar {
        width: 150px;
        border-right: solid .1rem lightgray
    }

    .manager-navigation {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    .manager-table {
        justify-content: center;
        width: 100vw;
    }

    h3 {
        text-align: center;
    }
    thead tr {
        font-weight: bold;
        color: brown;
    }
    td, th {
        text-align: center;
    }

    #order-card {
        color: black;
        font-weight: bold;
        text-decoration: none;
    }
    #order-card:hover {
        color: brown;
    }

</style>

<section class="manager-container">

    <div class="manager-navbar">

        <ul class="manager-navigation">
            @await Html.PartialAsync("ManagerPanel")
        </ul>

    </div>

    <div class="manager-table">

        <h3>Панель Пользователей</h3>

        <div class="workbench">
            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>Логин (Email)</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Номер Телефона</th>
                    </tr>
                </thead>

                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <a asp-area="Admin" asp-controller="Users" asp-action="UserCard" asp-route-userId="@user.Id">@user.Email</a>
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.LastName</td>
                        <td>@user.PhoneNumber</td>
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</section>